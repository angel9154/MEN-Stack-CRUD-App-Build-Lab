<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cocktails Index</title>
  </head>
  <body>
    <a href="/cocktails/new">Add New Cocktail</a>
    <h1>All Cocktails</h1>
    <ul>
        <% cocktails.forEach(cocktail => { %>
          <li><a href="/cocktails/<%= cocktail._id %>"><%= cocktail.name %></a></li>
        <% }); %>
      </ul>
  </body>
</html>
